@using CafeVendors.Models;

<h1>Add a Vendor</h1>
<p>Hello Pierre. Use the form below to add a vendor:</p>

<form action="/vendors" method="post">
  <div class="form-group">
    <label for="vendorName">Vendor Name:</label>
    <input id="vendorName" name="vendorName" type="text" class="form-control" required>
  </div>
    <div class="form-group">
    <label for="vendorDescription">Vendor Description:</label>
    <input id="vendorDescription" name="vendorDescription" type="text" class="form-control" required>
  </div>
  <button type="submit" class="btn">Add Vendor</button>
</form>

<h4>Don't want to add a vendor? Click to <a href="/">return to Home Page</a></h4>

