@using CafeVendors.Models;
@using System.Collections.Generic;

<h3>Here are the details for @Model["vendor"].Name, including all of @Model["vendor"].Name's orders.</h3>

<ol>
@foreach (Order order in @Model["orders"])
{
  <li><a href="/vendors/@Model["vendor"].Id/orders/@order.Id">@order.Description</a></li> //need to add orders
}
</ol>

<h4><a href="/vendors/@Model["vendor"].Id/orders/new">Add a new Order</a></h4> 
