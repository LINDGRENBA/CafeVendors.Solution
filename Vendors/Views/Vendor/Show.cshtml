@using CafeVendors.Models;

<h3>Here are the details for this vendor, including all of this vendor's orders.</h3>

@if (@Model.["orders"].Count == 0)
{
  <h3>This vendor doesn't have any orders associated with their account yet.</h3>
}

<ol>
@foreach (Order order in @Model["orders"])
{
  <li><a href="/vendors/@Model["vendor"].Id/orders/@order.Id">@order.Description</a></li> //need to add orders
}
</ol>

<p><a href="/vendors/@Model["vendor"].Id/orders/new">Add a new Order</a></p> 
